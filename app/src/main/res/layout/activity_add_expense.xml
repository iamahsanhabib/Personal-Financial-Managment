<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Add_Expense">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        >
        <TextView
            android:id="@+id/expenseCancelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cancel"
            android:textSize="20sp"
            android:padding="10sp"
            android:layout_marginLeft="10sp"
            android:fontFamily="sans-serif"
            android:textColor="#ffff">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Expense"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:padding="10sp"
            android:layout_marginLeft="10sp"
            android:fontFamily="sans-serif"
            android:textColor="#ffff">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/datePickerButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="JAN 01 2020"
                android:textSize="25sp"
                android:textColor="@color/black"
                style="?android:spinnerStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="openDatePicker"/>

        </LinearLayout>

        <EditText
            android:id="@+id/addExpenseAmountId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_income_border"
            android:paddingLeft="30sp"
            android:textColorHint="@color/background"
            android:inputType="number"
            android:drawablePadding="15sp"
            android:hint="Enter Amount"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:fontFamily="sans-serif"
            >
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"

                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="25sp"
                android:textColor="@color/black">
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:weightSum="4">
            <TextView
                android:id="@+id/addPlaneId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_plane"
                android:text="Plane"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true">

            </TextView>
            <TextView
                android:id="@+id/addHomeId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_home"
                android:text="Home"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addStationaryId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_taxi"
                android:text="Stationary"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addFoodId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_food"
                android:text="Food"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:weightSum="4">
            <TextView
                android:id="@+id/addSportId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_sport"
                android:text="Sport"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addCommunicationId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_call"
                android:text="Communication"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addBreakfastId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/breakfast"
                android:text="Breakfast"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addTrainId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_train"
                android:text="Train"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:weightSum="4">
            <TextView
                android:id="@+id/addShoppingId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_phone"
                android:text="Shopping"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addShirtId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tshirt"
                android:text="T-Shirt"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addCarId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_car"
                android:text="Car"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addBookId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_book"
                android:text="Book"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:weightSum="4"
            android:gravity="center">
            <TextView
                android:id="@+id/addMovieId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_filter"
                android:text="Movie"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>
            <TextView
                android:id="@+id/addGiftId"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_gift"
                android:text="Gift"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>